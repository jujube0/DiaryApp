<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    app:layout_goneMarginRight="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/recomment_list_profile_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/image_square"/>
        <TextView
            android:id="@+id/recomment_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/recomment_list_profile_img"
            android:text="김가영"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/recomment_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recomment_list_name"
            android:layout_toRightOf="@+id/recomment_list_profile_img"
            android:ellipsize="end"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recomment_list_content"
            android:layout_toRightOf="@id/recomment_list_profile_img"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/recomment_list_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15분전"
                android:textColor="#bdbdbd"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/recomment_list_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삭제"
                android:visibility="invisible"
                android:textColor="#bdbdbd"
                android:clickable="true"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>